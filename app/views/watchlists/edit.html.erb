<h1> Edit your watchlist </h1>

<%= form_for(@watchlist) do |f| %>
    <%= f.label :poster %>
    <%= f.text_field :poster%>
<br><br>
    <%= f.label :title %>
    <%= f.text_field :title %>
<br><br>
    <%= f.label :year %>
    <%= f.text_field :year %>
<br><br>
    <%= f.label :genre %>
    <%= f.text_field :genre%>
<br><br>
    <%= f.label :plot %>
    <%= f.text_field :plot%>
<br><br>
    <%= f.submit "Edit Movie"%>
<% end %>

